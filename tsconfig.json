/**
 * This file tells VS Code's TypeScript server to highlight type errors in
 * JavaScript files in the src/ directory, and in any-3d-model-to-glb.js and
 * any-3d-model-to-glb.test.js.
 *
 * You read that right: all our code is plain JavaScript, not TypeScript, but
 * the developer experience still benefits from live type checking.
 */
{
    "compilerOptions": {

        // Enable error reporting in JavaScript files in the src/ directory.
        // Same as adding `// @ts-check` at the top of every .js file.
        "checkJs": true,
  
        // Generate .d.ts files from the src/ JavaScript files. The tsserver
        // uses these .d.ts files internally - they're not written to the repo.
        "declaration": true,
  
        // Only output d.ts files, don't try to transpile JS files to JS files.
        "emitDeclarationOnly": true,

        // Allow ES2022 features, like `[1,2,3].at(-1)`.
        "lib": [ "dom", "es2022" ],
        "target": "es2022",

        // Use Node.js-style module resolution.
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    },

    // Match all JavaScript files in the src/ directory, plus the entry file.
    "include": [
        "src/**/*.js",
        "any-3d-model-to-glb.js",
        "any-3d-model-to-glb.test.js",
    ]
}
